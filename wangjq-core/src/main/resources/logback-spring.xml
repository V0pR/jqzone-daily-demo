<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>


    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>

    <appender name="APP_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <encoder>
            <pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread] %logger{100} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${LOG_PATH}/app/info/app-info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/app/info/app-info-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the keyFileName size reaches 100MB -->
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="APP_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <encoder>
            <pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread] %logger{100} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${LOG_PATH}/app/debug/app-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/app/debug/app-debug-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the keyFileName size reaches 100MB -->
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="APP_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!--See also http://logback.qos.ch/manual/appenders.html#RollingFileAppender-->
        <encoder>
            <pattern>%d{yyyy-MM-dd/HH:mm:ss.SSS} %level [%thread] %logger{100}.%method:%line - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${LOG_PATH}/app/error/app-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_PATH}/app/error/app-error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the keyFileName size reaches 100MB -->
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="io.ebean.DDL" level="INFO"/>

    <!-- SQL and bind values -->
    <logger name="io.ebean.SQL" level="INFO"/>

    <!-- Transaction Commit and Rollback events -->
    <logger name="io.ebean.TXN" level="INFO"/>

    <!-- Summary level details -->
    <logger name="io.ebean.SUM" level="INFO"/>

    <!-- L2 logging -->
    <logger name="io.ebean.cache.QUERY" level="INFO"/>
    <logger name="io.ebean.cache.BEAN" level="INFO"/>
    <logger name="io.ebean.cache.COLL" level="INFO"/>
    <logger name="io.ebean.cache.NATKEY" level="INFO"/>

    <!-- Elastic logging -->
    <logger name="io.ebean.ELA" level="INFO"/>
    <logger name="io.ebean.ELQ" level="INFO"/>
    <logger name="io.ebean.BULK" level="ERROR"/>

    <!-- Docker commands for starting test containers  -->
    <logger name="io.ebean.docker" level="INFO"/>

    <!--default-->
    <springProfile name="default">
        <logger name="com.zqt" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="APP_DEBUG"/>
            <appender-ref ref="APP_INFO"/>
            <appender-ref ref="APP_ERROR"/>

        </logger>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="APP_DEBUG"/>
            <appender-ref ref="APP_INFO"/>

        </root>
    </springProfile>

    <!--daily-->
    <springProfile name="daily">
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>

        </logger>

        <logger name="com.zqt" level="DEBUG" additivity="false">
            <appender-ref ref="APP_DEBUG"/>
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>

        </logger>
        <root level="INFO">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>

        </root>
    </springProfile>

    <!-- prod -->
    <springProfile name="prod">
        <logger name="org.springframework" level="ERROR">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>


        </logger>
        <logger name="com.zqt" level="INFO" additivity="false">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>


        </logger>
        <root level="INFO">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>

        </root>
    </springProfile>


    <!--pre-->
    <springProfile name="pre">
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>


        </logger>
        <logger name="com.zqt" level="DEBUG" additivity="false">
            <appender-ref ref="APP_DEBUG"/>
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>


        </logger>
        <root level="INFO">
            <appender-ref ref="APP_ERROR"/>
            <appender-ref ref="APP_INFO"/>

        </root>
    </springProfile>


</configuration>
